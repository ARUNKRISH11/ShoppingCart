<!-- Admin Products view -->
<section>
    <div class="container">
        <table class="table mt-4" id="usersTable">
            <h3 class="mt-3 mb-4  text-center">Total Users</h3>
            <thead>
                <tr>
                    <th scope="col">Number</th>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#each users}}
                <tr>
                    <th scope="row">1</th>
                    <td>{{this.name}}</td>
                    <td>{{this.email}}</td>
                    <td><a href="/admin/user-order-detailes/{{this._id}}" class="btn btn-success">Order History</a></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>
<script>
    $(document).ready(function () {
        $('#usersTable').DataTable();
    });
</script>