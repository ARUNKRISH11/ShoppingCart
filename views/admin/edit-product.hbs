<section>
    <div class="container">
        <div class="row ">
            <div class="mt-4">
                <h4>Edit Product</h4>
            </div>
            <form action="/admin/edit-product/{{product._id}}" method="post" enctype="multipart/form-data">
                <div class="mt-3 ">
                    <label for="name">Name </label><br>
                    <input type="text" name="name" value="{{product.name}}">
                    <br>
                </div>
                <div class="mt-3">
                    <label for="">Category</label><br>
                    <input type="text" name="category" value="{{product.category}}">
                    <br>
                </div>
                <div class="mt-3">
                    <label for="">Price</label><br>
                    <input type="text" name="price" value="{{product.price}}">
                    <br>
                </div>
                <div class="mt-3">
                    <label for="">Description</label><br>
                    <input type="text" name="description" value="{{product.description}}">
                    <br>
                </div>
                <div class="mt-3">
                    <label for="">Image</label><br>
                    <img src="/product-images/{{product._id}}.jpg" alt="image"
                        style="width: 180px;height: 100px" id="imgView"><br><br>
                    <input class="postion-center" type="file" name="image" onchange="viewImage(event)">
                    <br>
                </div>
                <div class="mt-3">
                    <button class="btn btn-success">Submit</button>
                </div>
            </form>
        </div>
    </div>
</section>
<!-- image loading function -->
<script>
    function viewImage(event){
        document.getElementById('imgView').src=URL.createObjectURL(event.target.files[0])
    }
</script>