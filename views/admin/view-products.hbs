<!-- Admin Products view -->
<section>
    <div class="container">
        <div class="row mt-4">
            <a href="/admin/add-product" class="btn btn-success " style="width: 25%; margin-left: auto">Add Product</a>
        </div>
        <table class="table mt-4" id="productsTable">
            <thead>
                <tr>
                    <th scope="col">Number</th>
                    <th scope="col">Name</th>
                    <th scope="col">Category</th>
                    <th scope="col">Description</th>
                    <th scope="col">Price</th>
                    <th scope="col">Image</th>
                    <th scope="col">Action</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">1</th>
                    <td>{{this.name}}</td>
                    <td>{{this.category}}</td>
                    <td>{{this.description}}</td>
                    <td>{{this.price}}</td>
                    <td><img src="/product-images/{{this._id}}.jpg" alt="image" style="width: 180px;height: 100px"></td>
                    <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a></td>
                    <td><a href="/admin/delete-product/{{this._id}}" class="btn btn-danger"
                            onclick="return confirm('Are you want to delete {{this.name}}?')">Delete</a></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>
<script>
    $(document).ready(function () {
        $('#productsTable').DataTable();
    });
</script>