<!-- User Cart -->
<section>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-12 m-auto">
                <div class="mt-2">
                    {{#if products}}
                    <h4 class="text-center">Cart Items</h4><br>
                    {{else}}
                    <h4 class="text-center">Cart is empty!</h4><br>
                    {{/if}}
                </div>
            </div>
            {{#if products}}
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Item</th>
                        <th scope="col">Title</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Button</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each products}}
                    <tr>
                        {{#each this.product}}
                        <td><img src="/product-images/{{this._id}}.jpg" alt="" style="width: 110px; height: 70px">
                        <td>{{this.name}}</td>
                        {{/each}}
                        <td>
                            <button class="cart-item-count btn btn-primary me-2">-</button>
                            {{this.quantity}}
                            <button class="cart-item-count btn btn-primary ms-2">+</button>
                        </td>
                        <td>
                            <a href="" class="btn btn-danger">Remove</a>
                        </td>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            {{/if}}
        </div>
    </div>
</section>