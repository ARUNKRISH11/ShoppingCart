<!-- User Cart -->
<section>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-12 m-auto">
                <div class="mt-2">
                    {{#if products}}
                    <h4 class="text-center">Cart Items</h4><br>
                    {{else}}
                    <h4 class="text-center">Cart is empty!</h4><br>
                    {{/if}}
                </div>
            </div>
            {{#if products}}
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Item</th>
                        <th scope="col">Title</th>
                        <th scope="col">Price</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Button</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each products}}
                    <tr>
                        <td><img src="/product-images/{{this.product._id}}.jpg" alt=""
                                style="width: 110px; height: 70px">
                        <td>{{this.product.name}}</td>
                        <td>Rs: {{this.product.price}}/-</td>
                        <td>
                            <!-- want to pass cart id, product id and product quantity in function changeQuantity -->
                            <button class="cart-item-count btn btn-primary me-2"
                                onclick="changeQuantity('{{this._id}}','{{this.product._id}}',-1)">-</button>
                            <span id="{{this.product._id}}">{{this.quantity}}</span>
                            <button class="cart-item-count btn btn-primary ms-2"
                                onclick="changeQuantity('{{this._id}}','{{this.product._id}}',1)">+</button>
                        </td>
                        <td>
                            <button class="btn btn-danger"
                                onclick="removeProduct('{{this._id}}','{{this.product._id}}')">Remove</button>
                        </td>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            {{/if}}
        </div>
    </div>
    <div class="float-end">
        <h4 class="float-start">Total: {{total}} Rs/-</h4>
        <a href="/place-order" class="col-8 btn btn-success mt-3">
            Place order
        </a>
    </div>

</section>