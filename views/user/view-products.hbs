<!-- User Product View -->
<section>
    <div class="container mt-4">
        <div class="row">
            {{#each products}}

            <div class="col-md-4 pb-4">
                <div class="card" style="width: 18rem;height: 28rem">
                    <img src="/product-images/{{this._id}}.jpg" class="card-img-top" alt="Image loading"
                        style="height: 180px">
                    <div class="card-body">
                        <h5 class="card-title">{{this.name}}</h5>
                        <p class="card-text">{{this.description}}</p>
                        <div class="position-absolute bottom-0 start-50 translate-middle">
                            <a href="/add-to-cart/{{this._id}}" class="btn btn-primary ">Add cart</a>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}

        </div>
    </div>
</section>